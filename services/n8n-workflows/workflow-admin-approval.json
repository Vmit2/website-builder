{
  "name": "Admin - Site Approval Workflow",
  "description": "Triggered when admin approves a site: toggles coming_soon flag, sends email, optionally triggers static export",
  "nodes": [
    {
      "name": "Webhook - Admin Approval",
      "type": "n8n-nodes-base.webhook",
      "position": [100, 200],
      "parameters": {
        "path": "webhook/admin-approval",
        "httpMethod": "POST",
        "responseMode": "onReceived"
      }
    },
    {
      "name": "Extract Approval Data",
      "type": "n8n-nodes-base.set",
      "position": [300, 200],
      "parameters": {
        "values": {
          "siteId": "={{ $json.site_id }}",
          "adminId": "={{ $json.admin_id }}",
          "comment": "={{ $json.comment }}"
        }
      }
    },
    {
      "name": "Get Site Details",
      "type": "n8n-nodes-base.postgres",
      "position": [500, 200],
      "parameters": {
        "operation": "select",
        "table": "sites",
        "where": "id = '={{ $json.siteId }}'",
        "limit": 1
      }
    },
    {
      "name": "Update Site Status",
      "type": "n8n-nodes-base.postgres",
      "position": [700, 200],
      "parameters": {
        "operation": "update",
        "table": "sites",
        "where": "id = '={{ $json.siteId }}'",
        "set": "status = 'approved', coming_soon = false, updated_at = NOW()"
      }
    },
    {
      "name": "Get User Email",
      "type": "n8n-nodes-base.postgres",
      "position": [900, 200],
      "parameters": {
        "operation": "select",
        "table": "users",
        "where": "id = '={{ $json.user_id }}'",
        "limit": 1
      }
    },
    {
      "name": "Send Approval Email",
      "type": "n8n-nodes-base.resend",
      "position": [1100, 200],
      "parameters": {
        "from": "noreply@at-solvexx.com",
        "to": "={{ $json.email }}",
        "subject": "Your Portfolio Site is Now Live!",
        "htmlBody": "<h1>Congratulations!</h1><p>Your portfolio site at <a href='https://{{ $json.username }}.at-solvexx.com'>{{ $json.username }}.at-solvexx.com</a> has been approved and is now fully live.</p><p>Start sharing your work with the world!</p>"
      }
    },
    {
      "name": "Create Audit Log",
      "type": "n8n-nodes-base.postgres",
      "position": [1300, 200],
      "parameters": {
        "operation": "insert",
        "table": "audit_logs",
        "columns": "user_id,action,resource_type,resource_id,changes",
        "values": "={{ $json.adminId }},SITE_APPROVED,sites,={{ $json.siteId }},{{ JSON.stringify({ comment: $json.comment }) }}"
      }
    },
    {
      "name": "Optional - Trigger Static Export",
      "type": "n8n-nodes-base.httpRequest",
      "position": [1500, 200],
      "parameters": {
        "url": "{{ $env.VERCEL_DEPLOY_HOOK }}",
        "method": "POST",
        "body": {
          "siteId": "={{ $json.siteId }}",
          "username": "={{ $json.username }}"
        }
      }
    }
  ],
  "connections": {
    "Webhook - Admin Approval": {
      "main": [
        [
          {
            "node": "Extract Approval Data",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Extract Approval Data": {
      "main": [
        [
          {
            "node": "Get Site Details",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Get Site Details": {
      "main": [
        [
          {
            "node": "Update Site Status",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Update Site Status": {
      "main": [
        [
          {
            "node": "Get User Email",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Get User Email": {
      "main": [
        [
          {
            "node": "Send Approval Email",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Send Approval Email": {
      "main": [
        [
          {
            "node": "Create Audit Log",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Create Audit Log": {
      "main": [
        [
          {
            "node": "Optional - Trigger Static Export",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
