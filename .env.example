# Application Configuration
NEXT_PUBLIC_SITE_URL=https://at-solvexx.test
NEXT_PUBLIC_APP_NAME=At-Solvexx
NODE_ENV=development

# Database (Supabase)
DATABASE_URL=postgres://user:password@localhost:5432/portfolio_builder
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# Vercel Deployment
VERCEL_DEPLOY_HOOK=https://api.vercel.com/v1/integrations/deploy/...
VERCEL_PROJECT_ID=your-project-id
VERCEL_TEAM_ID=your-team-id
VERCEL_ALIAS=your-vercel-alias.vercel.app

# Payment (Razorpay)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret

# DNS & CDN (Cloudflare)
CLOUDFLARE_TOKEN=your-cloudflare-token
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_ZONE_ID=your-zone-id

# Email (Resend)
RESEND_API_KEY=your-resend-api-key

# Image Storage (Cloudinary)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Analytics (Plausible)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com
PLAUSIBLE_API_KEY=your-api-key

# Admin Configuration
ADMIN_EMAIL=admin@at-solvexx.com
ADMIN_PASSWORD_HASH=your-hashed-password

# n8n Webhook
N8N_WEBHOOK_URL=http://localhost:5678/webhook/

# Optional: Error Tracking (Sentry)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Optional: GitHub Actions Secrets
VERCEL_TOKEN=your-vercel-token
SNYK_TOKEN=your-snyk-token
SLACK_WEBHOOK=your-slack-webhook-url
